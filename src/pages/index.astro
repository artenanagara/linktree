---
const links = [
  {
    name: "Case Study",
    url: "https://medium.com/@artenanagara",
  },
  {
    name: "Free Design BuyCar Landing Page",
    url: "https://www.figma.com/community/file/1220034787814175929",
  }

];

const socialLinks = [
  {
    name: "Instagram",
    url: "https://instagram.com/artenanagara",
    image: "https://cdn.simpleicons.org/instagram/white",
  },
  {
    name: "Linkedin",
    url: "https://www.linkedin.com/in/artena-nagara/",
    image: "https://cdn.simpleicons.org/linkedin/white",
  },
  {
    name: "Figma",
    url: "https://www.figma.com/@artenanagara",
    image: "https://cdn.simpleicons.org/figma/white",
  },
  {
    name: "Dribbble",
    url: "https://dribbble.com/artenanagara",
    image: "https://cdn.simpleicons.org/dribbble/white",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link href="/Foto Artena.png"/>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Artena Nagara</title>
  </head>
  <body class="bg-gradient-to-b from-indigo-100 bg-indigo-500">
    <main
      class="max-w-sm w-screen min-h-screen mx-auto shadow-lg py-20 px-5 flex flex-col items-stretch justify-center"
    >
      <div
        class="kotak rounded-lg w-[180px] min-h-[180px] h-[180px] self-center"
      >
        <img
          class="w-full h-full rounded-full"
          src="https://res.cloudinary.com/dkkgcdlzv/image/upload/v1679414380/IMG_20230319_024030_422_ktxghb.jpg"
          alt="Artena"
        />
      </div>

      <div class="flex text-indigo-50 flex-col items-center mt-8">
        <h1 class="text-2xl font-semibold">Artena Nagara</h1>
        <p>UI Designer</p>
      </div>

      <ul class="mt-10 space-y-3">
        {
          links.map((link) => (
            <li class="hover:-translate-y-1 transition duration-150 hover:shadow">
              <a href={link.url}>
                <div class="kotak font-semibold text-lg text-white text-center tracking-wide rounded-lg w-full bg-indigo-700 hover:bg-indigo-800 duration-150 px-10 py-6">
                  {link.name}
                </div>
              </a>
            </li>
          ))
        }
      </ul>

      <ul class="flex mt-10 justify-center space-x-4">
        {
          socialLinks.map((link) => (
            <li class="hover:-translate-y-1 duration-100">
              <a href={link.url}>
                <div class="rounded-full w-[60px] h-[60px] bg-indigo-900 border-2 border-indigo-700 p-4 hover:bg-indigo-800 duration-100">
                  <img src={link.image} alt="" />
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </body>
</html>
